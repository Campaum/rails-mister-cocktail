<div class="container">
  <%= @cocktail.name %>
    <% @cocktail.doses.each do |dose| %>
    <p>
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, dose_path(dose), method: :delete %>
    </p>
  <% end %>
  <div>
    <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
  </div>
</div>
